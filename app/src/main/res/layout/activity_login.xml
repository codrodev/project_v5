<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#434c5d"
    android:focusable="true"
    tools:context="dm.sime.com.kharetati.layout.LoginActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liniearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:focusableInTouchMode="true">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_gravity="center_vertical|center_horizontal"
          android:background="#6cbcc3"
          android:gravity="center_vertical|center_horizontal"
          android:text="@string/login"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="19sp"></TextView>

      <!--<Space
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1" />-->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:id="@+id/layoutMYId"
          android:visibility="gone"
          android:layout_marginTop="10dp"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDubaiID"
            android:layout_width="209dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/myid_logo"

            app:srcCompat="@drawable/myid_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/txtRegister"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"

              android:gravity="start"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="@string/register"
              android:textAlignment="viewStart"
              android:textAllCaps="false"
              android:textColor="#979fb2"
              android:textColorLink="#979fb2"
              android:textIsSelectable="false"
              android:textStyle="bold"
              android:textSize="@dimen/loginFontSize" />

          <View
              android:id="@+id/viewBar3"
              android:layout_width="1dp"
              android:layout_height="40dp"
              android:layout_gravity="center_vertical"

              android:background="#fff"
              android:textDirection="ltr" />

          <TextView
              android:id="@+id/txtForgotPassword"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:gravity="start"
              android:lineHeight="15dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text="@string/forgot_username_password"
              android:textAlignment="viewStart"
              android:textColor="#979fb2"
              android:textColorLink="#979fb2"
              android:textStyle="bold"
              android:textSize="@dimen/loginFontSize" />
        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/txtusername"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/plc_username"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:nextFocusForward="@+id/txtPassword"
            android:textAlignment="center"
            android:textColor="@color/edittextColor"
            android:textSize="@dimen/loginFontSize"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/plc_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/edittextColor"
            android:textSize="@dimen/loginFontSize"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:text="@string/lbl_login"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

          <CheckBox
              android:id="@+id/chkRememberMe"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_weight="1"
              android:buttonTint="@android:color/holo_blue_dark"
              android:text="@string/rememberme"
              android:textColor="#979fb2"
              android:textFontWeight="800"
              android:textColorLink="@android:color/white"
              android:textSize="@dimen/loginFontSize" />

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:layout_weight="1"
          android:id="@+id/layoutUae"
          android:visibility="visible"
          android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layoutUAEPass"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_gravity="center">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.25"
              android:id="@+id/txtLoginwith"
              android:paddingTop="5dp"
              android:layout_gravity="end|center_vertical"
              android:fontFamily="@font/dubai_font"
              android:text="@string/login_with"
              android:textAlignment="viewEnd"
              android:paddingEnd="2dp"
              android:visibility="visible"
              android:textColor="@color/black"
              android:textSize="@dimen/loginFontSize" />
          <ImageView
              android:layout_width="48dp"
              android:layout_height="44dp"
              android:padding="4dp"
              android:id="@+id/imgUAEPass"
              android:scaleType="fitXY"
              android:layout_gravity="center"
              android:src="@drawable/uaepass" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.25"
              android:paddingTop="5dp"
              android:id="@+id/txtUAEPass"
              android:layout_gravity="start|center_horizontal"
              android:fontFamily="@font/dubai_font"
              android:text="@string/with_uaepass"
              android:paddingStart="2dp"
              android:textAlignment="viewStart"
              android:visibility="visible"
              android:textColor="@color/black"
              android:textSize="@dimen/loginFontSize" />
        </LinearLayout>
        <TextView
            android:id="@+id/lblGuest"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/left_rounded_edittext_gradient"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="@string/lbl_contAsGuest"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/white"
            />

        <Switch
            android:id="@+id/switchLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textFontWeight="800"
            android:layout_marginTop="20dp"
            android:text="التبديل إلى اللغة العربية"
            android:textColor="#979fb2"
            android:textSize="@dimen/loginFontSize" />


      </LinearLayout>
    </LinearLayout>



    </LinearLayout>



