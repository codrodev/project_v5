<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dm.sime.com.kharetati.fragment.MyMapFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:fillViewport="false"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065">

      <TextView
          android:id="@+id/areaName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="2dp"
          android:layout_weight="1"
          android:text=""
          android:visibility="gone"
          android:layout_gravity="center"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.AppCompat"
          android:textSize="16sp"
          android:textStyle="bold" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginBottom="12dp"
          android:layout_marginTop="8dp"
          android:layout_weight="0.70"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_flow_txtPlotNoLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/plotno2"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_flow_txtPlotNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textDirection="ltr"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:textStyle="bold"/>
      </LinearLayout>

      <TextView
          android:id="@+id/txtPlotReg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="0dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_weight="0.70"
          android:padding="10dp"
          android:text="@string/title_zoneReg1"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.AppCompat"
          android:textSize="16sp"
          android:textStyle="bold"
          android:visibility="gone" />
      <LinearLayout
          android:id="@+id/btnZoneRegulation"
          android:layout_width="match_parent"
          android:layout_marginBottom="18dp"
          android:layout_height="35dp"
          android:background="@drawable/rounded_edittext_gradient"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/img_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/round_info"
            android:layout_marginLeft="@dimen/img_margin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text="@string/lbl_PlotRegulation"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginLeft="15dp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/btnBuildingViolations"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_marginBottom="18dp"
          android:background="@drawable/rounded_edittext_gradient"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/img_margin"
            android:src="@drawable/list"
            android:layout_marginLeft="@dimen/img_margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/lbl_building_violations_btn"
            android:textAllCaps="false"
            android:textColor="#fff" />
      </LinearLayout>
      <!--<Button
          android:id="@+id/"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="20dp"
          android:layout_marginEnd="0dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_weight="0.21"

          android:textAllCaps="false"
          android:textColor="#fff"
          android:visibility="visible" />-->
      <LinearLayout
          android:id="@+id/btnLandActivcities"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_marginBottom="18dp"
          android:background="@drawable/rounded_edittext_gradient"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/img_margin"
            android:src="@drawable/layers_icon"
            android:layout_marginLeft="@dimen/img_margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/lbl_land_activities"
            android:textAllCaps="false"
            android:textColor="#fff" />
      </LinearLayout>
      <!--<Button
          android:id="@+id/"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="0dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_weight="0.21"
          android:background="@drawable/rounded_edittext_gradient"
          android:text="@string/lbl_land_activities"
          android:textAllCaps="false"
          android:textColor="#fff" />-->

      <View
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:layout_marginBottom="18dp"
          android:layout_marginTop="0dp"
          android:background="@color/gray" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="gone">


        <TextView
            android:id="@+id/txtInputDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.21"
            android:padding="10dp"
            android:text="@string/title_optionSelect"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:id="@+id/txtUserName2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/profile_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:nextFocusForward="@+id/txtEmirateID"
            android:textAlignment="center" />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/txtEmirateID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.27"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="784-____-_______-_"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layoutDirection="ltr"
            android:nextFocusForward="@+id/txtPhoneNumber"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            mask:allowed_chars="1234567890"
            mask:mask="###-####-#######-#"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="191dp" />

        <EditText
            android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="97150_______"
            android:imeOptions="actionNext"
            android:inputType="number|phone"
            android:layoutDirection="ltr"
            android:nextFocusForward="@+id/textEmailAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/btnNextAttachment"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/rounded_edittext_gradient"
          android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/img_margin"
            android:src="@drawable/map_icon"
            android:layout_marginLeft="@dimen/img_margin" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/lbl_requestKharetati"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.781"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="281dp"
            tools:layout_conversion_absoluteX="84dp"
            tools:layout_conversion_absoluteY="0dp"
            android:textColor="#fff" />
      </LinearLayout>
      <!--<Button
          android:id="@+id/"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="0dp"
          android:layout_marginLeft="0dp"
          android:layout_marginRight="0dp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:background="@drawable/rounded_edittext_gradient"
          android:text="@string/"
          android:textAllCaps="false"
          android:textColor="#fff"
          />
-->

      <TextView
          android:id="@+id/txtEmirateIDExpiredMsg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_weight="0.70"
          android:gravity="center_horizontal"
          android:text="@string/emirates_id_expired"
          android:textColor="@android:color/holo_red_dark"
          android:textStyle="bold"
          android:visibility="gone" />

    </LinearLayout>

  </ScrollView>

</FrameLayout>

