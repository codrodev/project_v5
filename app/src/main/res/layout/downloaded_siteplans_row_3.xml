<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:elevation="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1.00"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.00"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/plot_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_lblPloto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/plotno"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_txtPlotNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_lblSpsno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/SPN_TX_NO"

                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_txtTransactionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:text=""
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="start" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_lblStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/LBL_REQUEST_STATUS"
                        android:textAppearance="@style/Base.Theme.AppCompat"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_txtStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:textColor="#d3d3d3"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_lblDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/LBL_DATE_TIME"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAppearance="@style/Base.Theme.AppCompat"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/downloadedSitePlan_2_txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.00"
                        android:textStyle="bold"
                        android:text=""
                        android:textColor="#d3d3d3"
                        android:textSize="14sp" />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/downloadedSitePlan_2_btnEmail"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/view_site_plan"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:src="@drawable/email_100x100" />

                <ImageButton
                    android:id="@+id/downloadedSitePlan_2_btnView"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/view_site_plan"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/document_icon"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/downloadedSitePlan_2_btnMakani"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/app_makani"
                    android:scaleType="centerInside"
                    android:src="@drawable/makani" />
                <Button
                    android:id="@+id/siteplan_payButton"
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="@string/pay"
                    android:textFontWeight="600"
                    android:textAllCaps="false"
                    android:contentDescription="@string/pay"
                    android:scaleType="centerInside"
                    android:src="@drawable/makani"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
