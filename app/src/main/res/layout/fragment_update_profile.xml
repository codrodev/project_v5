<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdateProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_update_profile_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="?attr/colorPrimary"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/VIEW_PROFILE"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_emirateId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:elevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:contentPadding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.019">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblEid"
                    android:background="@null"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/fragment_update_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textDirection="locale"
                        android:hint="@string/profile_name"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/fragment_update_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="locale"
                        android:ems="10"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/fragment_update_profile_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="locale"
                        android:textAlignment="viewStart"
                        android:ems="10"
                        android:hint="@string/mobile_number_9715xxxxxxxx"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/emiratesId"
                        android:textDirection="locale"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="16sp"
                        android:visibility="gone"/>

                    <br.com.sapereaude.maskedEditText.MaskedEditText
                        android:id="@+id/fragment_update_profile_emirates_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="0.27"
                        android:ems="10"
                        android:hint="784-____-_______-_"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|number|phone"
                        android:layoutDirection="ltr"
                        android:textDirection="locale"

                        android:selectAllOnFocus="false"
                        android:textAlignment="viewStart"
                        android:textSize="16sp"
                        mask:allowed_chars="1234567890"
                        mask:mask="###-####-#######-#"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="191dp"
                        android:gravity="start" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/na22me1"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/fragment_update_profile_img_eid_front"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_below="@+id/lblEid"
                                android:layout_weight="1"
                                android:contentDescription="@string/emirates_id_front"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/photo" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                android:text="@string/front"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/fragment_update_profile_img_eid_back"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_below="@+id/lblEid"
                                android:layout_weight="1"
                                android:contentDescription="@string/emirates_id_back"
                                android:padding="2dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/photo" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                android:text="@string/back"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_below="@+id/na22me1"
                        android:orientation="horizontal"
                        android:visibility="gone">


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/fragment_update_profile_updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext_gradient"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:textDirection="locale">

                <TextView
                    android:id="@+id/fragment_update_profile_txtUpdateProfileMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:layout_marginRight="-15dp"
                    android:layout_marginEnd="-15dp"
                    android:layout_gravity="start"
                    android:padding="20dp"
                    android:text="@string/UPDATE_PROFILE_MSG" />
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/dubai_id_logo"

                    android:src="@drawable/myid_logo"
                    android:id="@+id/dubaiid"

                    android:layout_marginRight="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
