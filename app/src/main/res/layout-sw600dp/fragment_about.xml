<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:weightSum="1"
    tools:context="dm.sime.com.kharetati.fragment.AboutFragment">

    <TextView
      android:id="@+id/title_about_us"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:height="40dp"
      android:background="?attr/colorPrimary"
      android:gravity="center_vertical"
      android:text="@string/menu_about_us"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="16sp" />

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/white"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:visibility="gone">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="169dp"
          android:layout_height="80dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="13dp"
          android:importantForAccessibility="no"
          app:srcCompat="@drawable/dubai_gov" />

      <Space
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="216dp"
          android:layout_height="80dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:importantForAccessibility="no"
          app:srcCompat="@drawable/dm1" />

    </LinearLayout>




    <WebView
        android:id="@+id/lbl_app_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Policies"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317" />

    <TextView
        android:id="@+id/txt_term_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/terms_and_conditions_click"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/txt_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:text="@string/lbl_security_and_privacy_policy"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/link_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColorLink="@android:color/holo_red_light"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/libraries_we_use"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Gson"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/apacheLicense"
        android:textColorLink="@android:color/holo_red_light"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ArcGIS Runtime SDK"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/license"
        android:textColorLink="@android:color/holo_red_light"
        android:visibility="gone" />


      <!--<TableRow>-->
      <!--<TextView-->
      <!--android:layout_column="1"-->
      <!--android:text="Save As..."-->
      <!--android:padding="3dip" />-->
      <!--<TextView-->
      <!--android:text="Ctrl-Shift-S"-->
      <!--android:gravity="right"-->
      <!--android:padding="3dip" />-->
      <!--</TableRow>-->

    <TextView
        android:id="@+id/link_share_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/lbl_share_the_app"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_open_in_app_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/open_in_app_store"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@android:color/holo_red_light"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@android:color/holo_green_dark"
        android:visibility="gone" />


  </LinearLayout>
</ScrollView>
